<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#A9C8CC">

    <!-- Help Title -->
    <TextView
        android:id="@+id/help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help and Support"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- FAQ Section -->
    <TextView
        android:id="@+id/help_faq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequently Asked Questions (FAQs)"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"/>

    <!-- FAQ Content -->
    <TextView
        android:id="@+id/faq1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q: How do I start a quiz?"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A: Simply select a quiz category and click 'Start Quiz'."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/faq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q: How do I reset my score?"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"
        android:layout_gravity="start"/>

    <TextView
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A: Scores are automatically reset when you start a new quiz."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:layout_gravity="start"/>

    <!-- Contact Information -->
    <TextView
        android:id="@+id/contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For further assistance, please contact us at: soni844550@gmail.com"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Submit Feedback Button -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#10C3B2"
        android:textSize="20sp"
        android:backgroundTint="#673AB7"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
